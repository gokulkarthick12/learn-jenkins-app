pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh '''
                ls -la
                npm --version
                node --version
                npm ci
                npm run build
                '''
               
            }
        }
        stage('Test'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                [ -f /build/index.html ] && echo "File exists" || echo "File does not exist"

                '''
               
            }
        }
    }
}
